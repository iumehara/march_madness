@import "bootstrap-sprockets";
@import "bootstrap";

html, body {
	height:100%;
}

.title-bar {
	border: 1px solid purple;
	height: 10%;
	width: 100%;
}

.region-block {
	border: 1px solid black;
	height: 90%;
	width: 100%;

	.round-block {
		height: 100%;
		width: 20%;
		float: right;

		.round-of-2 {
			width: 100%;
			float: left;
			height: 100%;
		}
		.round-of-4 {
			width: 100%;
			float: left;
			height: 50%;
		}
		.round-of-8 {
			width: 100%;
			float: left;
			height: 25%;
		}
		.round-of-16 {
			width: 100%;
			float: left;
			height: 12.5%;
		}
	}

}

